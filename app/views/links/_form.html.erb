<%= form_with(model: link) do |form| %>
  <% if link.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
        <% link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <% if current_user %>
    <div>
      <%= form.label :url_short, style: "display: block" %>
      <%= form.text_field :url_short %>
    </div>
  <% end %>

  <% if action_name == 'edit' %>
    <div>
      <%= form.label :category, style: "display: block" %>
      <%= form.text_field :category %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
